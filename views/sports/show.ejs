<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <title><%= sport.title %> | Sports Scheduler</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; }
    </style>
</head>
<body class="bg-blue-50 min-h-screen p-8">

    <div class="max-w-5xl mx-auto">
        <a href="/sports" class="inline-flex items-center text-slate-500 hover:text-blue-600 mb-6 transition font-medium">
            <i class="fa-solid fa-arrow-left mr-2"></i> Back to Dashboard
        </a>

        <div class="bg-white rounded-2xl shadow-sm border border-blue-100 p-8 mb-8 flex flex-col md:flex-row justify-between items-center gap-4">
            <div>
                <h1 class="text-4xl font-extrabold text-slate-800 tracking-tight"><%= sport.title %></h1>
                <p class="text-slate-500 mt-2 font-medium">Managed by: <span class="text-slate-800 bg-slate-100 px-2 py-1 rounded"><%= sport.User.firstName %></span></p>
            </div>

            <% if (user.role === 'admin' || user.id === sport.userId) { %>
                <div class="flex gap-3">
                    <a href="/sports/edit/<%= sport.id %>" class="flex items-center gap-2 bg-blue-50 text-blue-600 px-5 py-2.5 rounded-xl hover:bg-blue-100 border border-blue-100 transition font-bold shadow-sm">
                        <i class="fa-solid fa-pen-to-square"></i> Edit Sport
                    </a>
                    <button onclick="deleteSport('<%= sport.id %>')" class="flex items-center gap-2 bg-red-50 text-red-600 px-5 py-2.5 rounded-xl hover:bg-red-100 border border-red-100 transition font-bold shadow-sm">
                        <i class="fa-solid fa-trash"></i> Delete Sport
                    </button>
                </div>
            <% } %>
        </div>

        <div class="mb-10">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-2xl font-bold text-slate-800 flex items-center gap-2">
                    <span class="w-1 h-8 bg-emerald-500 rounded-full"></span>
                    Upcoming Sessions
                </h2>
                <a href="/sessions/create/<%= sport.id %>" class="bg-emerald-600 text-white px-5 py-2.5 rounded-xl hover:bg-emerald-700 shadow-lg shadow-emerald-500/20 transition transform hover:-translate-y-0.5 font-bold flex items-center gap-2">
                    <i class="fa-solid fa-plus"></i> Schedule Match
                </a>
            </div>

            <% if (upcomingSessions && upcomingSessions.length > 0) { %>
                <div class="bg-white rounded-xl shadow-sm border border-blue-100 overflow-hidden">
                    <table class="w-full text-left">
                        <thead class="bg-slate-50 text-slate-500 uppercase text-xs font-bold tracking-wider">
                            <tr>
                                <th class="p-4 border-b border-slate-100">Session Name</th>
                                <th class="p-4 border-b border-slate-100">Date & Time</th>
                                <th class="p-4 border-b border-slate-100">Venue</th>
                                <th class="p-4 border-b border-slate-100">Status</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-50">
                            <% upcomingSessions.forEach(session => { %>
                                <tr class="hover:bg-blue-50/50 transition">
                                    <td class="p-4 font-semibold text-slate-700"><%= session.sessionName %></td>
                                    <td class="p-4 text-slate-600">
                                        <%= session.date %> <span class="text-xs text-slate-400">at <%= session.time %></span>
                                    </td>
                                    <td class="p-4 text-slate-600"><%= session.venue %></td>
                                    <td class="p-4">
                                        <% if (session.canceled) { %>
                                            <div class="flex items-center gap-2">
                                                <span class="bg-red-100 text-red-700 text-[10px] font-extrabold px-2 py-1 rounded border border-red-200">
                                                    CANCELED
                                                </span>
                                                <a href="/sessions/<%= session.id %>" class="text-xs text-red-500 hover:underline">Why?</a>
                                            </div>
                                        <% } else { %>
                                            <a href="/sessions/<%= session.id %>" class="text-blue-600 hover:text-blue-800 font-bold text-sm bg-blue-50 px-3 py-1 rounded hover:bg-blue-100 transition">
                                                View
                                            </a>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="bg-white p-12 rounded-xl border-2 border-dashed border-slate-200 text-center">
                    <i class="fa-regular fa-calendar-xmark text-3xl text-slate-300 mb-3"></i>
                    <p class="text-slate-500 font-medium">No upcoming sessions scheduled.</p>
                </div>
            <% } %>
        </div>

        <div>
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-bold text-slate-600 flex items-center gap-2 pl-3 border-l-4 border-slate-300">
                    History
                </h2>
                <a href="/sessions/history/<%= sport.id %>" class="text-slate-500 hover:text-blue-600 text-sm font-medium">View All History &rarr;</a>
            </div>

            <% if (pastSessions && pastSessions.length > 0) { %>
                <div class="bg-white/60 rounded-xl shadow-sm border border-slate-200 overflow-hidden">
                    <table class="w-full text-left">
                        <thead class="bg-slate-50 text-slate-400 text-xs uppercase font-bold">
                            <tr>
                                <th class="p-4">Session Name</th>
                                <th class="p-4">Date</th>
                                <th class="p-4">Venue</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-100">
                            <% pastSessions.slice(0, 5).forEach(session => { %> 
                            <tr>
                                    <td class="p-4 text-slate-500"><%= session.sessionName %></td>
                                    <td class="p-4 text-slate-500"><%= session.date %></td>
                                    <td class="p-4 text-slate-500"><%= session.venue %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p class="text-slate-400 text-sm italic ml-4">No past history recorded yet.</p>
            <% } %>
        </div>

    </div>

    <script>
        const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');

        function deleteSport(id) {
            if (!confirm("Are you sure? This will delete all sessions associated with this sport!")) return;

            fetch(`/sports/${id}`, {
                method: "DELETE",
                headers: {
                    "Content-Type": "application/json",
                    "CSRF-Token": csrfToken
                },
                body: JSON.stringify({ "_csrf": csrfToken })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    window.location.href = "/sports";
                } else {
                    alert("Failed to delete sport.");
                }
            })
            .catch(err => console.error(err));
        }
    </script>
</body>
</html>