<!-- views/users/login.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Sports Scheduler</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-cover bg-center bg-no-repeat h-screen flex flex-col items-center justify-center font-sans"
      style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://wallpaperaccess.com/full/5004699.jpg');">

    <div class="text-center mb-8 animate-fade-in-down">
        <h1 class="text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-emerald-400 drop-shadow-lg tracking-tight">
            <span class="text-yellow-400">S</span>PORTS SCHEDULER
        </h1>
        <p class="text-yellow-300 text-lg mt-2 font-medium tracking-wide shadow-black drop-shadow-md">Elevate your game with ease!</p>
    </div>

    <div class="w-full max-w-md bg-black/80 backdrop-blur-sm p-8 rounded-2xl shadow-[0_0_20px_rgba(0,255,153,0.3)] border border-white/10">
        <div class="text-center mb-6">
            <h2 class="text-2xl font-bold text-emerald-300">Welcome Back</h2>
            <p class="text-gray-400 text-sm">Login to manage your sessions</p>
        </div>

        <form action="/login" method="POST" class="space-y-5">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <div class="relative">
                <i class="fa-solid fa-envelope absolute left-3 top-3.5 text-gray-500"></i>
                <input required type="email" name="email" placeholder="Email Address" 
                    class="w-full pl-10 pr-4 py-3 bg-white/10 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-emerald-400 focus:ring-1 focus:ring-emerald-400 transition">
            </div>

            <div class="relative">
                <i class="fa-solid fa-lock absolute left-3 top-3.5 text-gray-500"></i>
                <input required type="password" name="password" placeholder="Password" 
                    class="w-full pl-10 pr-4 py-3 bg-white/10 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-emerald-400 focus:ring-1 focus:ring-emerald-400 transition">
            </div>

            <button type="submit" class="w-full py-3 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg transition transform hover:scale-[1.02] shadow-lg">
                Sign In
            </button>
        </form>

        <% if (messages && messages.error && messages.error.length > 0) { %>
            <div class="mt-4 space-y-2">
                <% messages.error.forEach(msg => { %>
                    <div class="bg-red-500/20 border border-red-500 text-red-200 text-sm px-4 py-2 rounded text-center">
                        <%= msg %>
                    </div>
                <% }) %>
            </div>
        <% } %>

        <div class="mt-6 text-center text-sm space-y-2">
            <p class="text-gray-400">Don't have an account? <a href="/signup" class="text-yellow-400 hover:text-yellow-300 font-semibold underline">Sign Up</a></p>
            <p><a href="/" class="text-blue-400 hover:text-blue-300">Back to Home</a></p>
        </div>
    </div>

</body>
</html>